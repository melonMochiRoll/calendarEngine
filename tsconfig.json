{
  "compilerOptions": {
    "module": "es2020",
    "target": "es5",
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true,
    "baseUrl": ".",
    "paths": {
      "Api/*": ["src/api/*"],
      "Components/*": ["src/components/*"],
      "Containers/*": ["src/containers/*"],
      "Features/*": ["src/features/*"],
      "Hooks/*": ["src/hooks/*"],
      "Lib/*": ["src/lib/*"],
      "Pages/*": ["src/pages/*"],
      "Routes/*": ["src/routes/*"],
      "Styles/*": ["src/styles/*"],
      "Typings/*": ["src/typings/*"],
    },
  }
}